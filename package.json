{
  "name": "image-processing-api",
  "version": "1.0.0",
  "description": "Image processing API with Jasmine TypeScript tests",
  "main": "dist/app.js",
  "scripts": {
    "start": "ts-node src/server.ts",
    "build": "tsc",
    "start:prod": "npm run build && node dist/app.js",
    "test": "cross-env NODE_ENV=test jasmine",
    "lint": "eslint 'src/**/*.ts'",
    "format": "prettier --write 'src/**/*.ts'"
  },
  "devDependencies": {
    "@types/express": "^4.17.23",
    "@types/jasmine": "^4.6.5",
    "@types/node": "^17.0.32",
    "@types/sharp": "^0.31.1",
    "@types/supertest": "^6.0.3",
    "cross-env": "^7.0.3",
    "jasmine": "^4.6.0",
    "jasmine-spec-reporter": "^7.0.0",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4"
  },
  "dependencies": {
    "ejs": "^3.1.10",
    "express": "^4.17.1",
    "sharp": "^0.30.4",
    "supertest": "^6.1.6"
  },
  "jasmine": {
    "spec_dir": "src/tests",
    "spec_files": [
      "**/*.ts"
    ],
    "helpers": [
      "../node_modules/ts-node/register"
    ]
  }
}
