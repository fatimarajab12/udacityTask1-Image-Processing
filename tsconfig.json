{
  "compilerOptions": {
    "target": "ES6",                   // إصدار JS النهائي
    "module": "CommonJS",              // لتوافق مع Node وJasmine
    "rootDir": "./src",                // مجلد ملفات TS
    "outDir": "./dist",                // مجلد ملفات JS المترجمة
    "strict": true,                    // تفعيل قواعد TypeScript الصارمة
    "esModuleInterop": true,           // دعم الاستيراد من CommonJS
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,              // تخطي التحقق من ملفات التعريف الخارجية
    "sourceMap": true                  // لتسهيل تصحيح الأخطاء
  },
  "include": ["src/**/*.ts"],          // كل ملفات TS داخل src
  "exclude": ["node_modules", "dist"]  // تجاهل هذه المجلدات
}
